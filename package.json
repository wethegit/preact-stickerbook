{
  "name": "@wethegit/preact-stickerbook",
  "version": "3.0.1-beta.4",
  "description": "Easily create collage apps that are accessible by default.",
  "files": [
    "dist/*"
  ],
  "style": "dist/style.css",
  "css": "dist/style.css",
  "type": "module",
  "engines": {
    "node": ">=16.14.2"
  },
  "exports": {
    ".": {
      "import": "./dist/preact-stickerbook.js",
      "require": "./dist/preact-stickerbook.cjs"
    },
    "./helpers": {
      "import": "./dist/preact-stickerbook-helpers.js",
      "require": "./dist/preact-stickerbook-helpers.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "npm run lint:scripts && npm run lint:styles && vite build",
    "lint:scripts": "eslint --fix --ext .jsx,js --ignore-path .gitignore .",
    "lint:styles": "stylelint src/**/*.{css,scss}"
  },
  "dependencies": {
    "preact": "^10.13.1",
    "wtc-math": "^1.0.17",
    "wtc-simplegl": "^0.0.4"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "eslint": "^8.40.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "vite": "^4.3.2"
  },
  "keywords": [
    "preact",
    "preact-component"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wethegit/preact-stickerbook.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wethegit/preact-stickerbook/issues"
  },
  "homepage": "https://github.com/wethegit/preact-stickerbook#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix",
    "*": "prettier -w -u"
  }
}
